{
	"compilerOptions": {
		"declaration": true,
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist/",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,
		"typeRoots": [
			"./node_modules/@types/"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}